{
  "name": "xencode",
  "version": "1.0.0",
  "description": "Simple and easy-to-use text encoding algorithms",
  "private": "true",
  "scripts": {
    "start": "npm run watch",
    "watch": "npm run configs && nodemon",
    "build": "npm run configs && webpack",
    "build:tsc": "tsc --build",
    "serve": "webpack serve",
    "test": "jest",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "configs": "tsc --project ./tsconfig.ts-node.json --showConfig > ./configs/tsconfig.ts-node.json && tsc --project ./tsconfig.webpack.json --showConfig > ./configs/tsconfig.webpack.json",
    "prepare": "husky install",
    "prepare:uninstall": "npm uninstall husky && git config --unset core.hooksPath && npm pkg delete scripts.prepare && npm pkg delete scripts.prepare:uninstall"
  },
  "author": "Roman Narvatov <kjiibe@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.2",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@webpack-cli/generators": "^3.0.7",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
